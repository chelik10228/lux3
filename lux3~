#!/usr/bin/python3
import pygame;
import time;

pygame.mixer.init();
pygame.font.init();
screen = pygame.display.set_mode([340,190]);
def draw(c1,c2,c3,sx,sy,x,y):
    pygame.draw.rect(screen, (c1,c2,c3), (sx,sy,x,y));

x,y = 0,0;

pygame.mouse.set_visible(False);
while True:
    for e in pygame.event.get():
        if e.type == pygame.KEYDOWN:
            if e.key == pygame.K_w:
                y -= 4;
            if e.key == pygame.K_a:
                x -= 4;
            if e.key == pygame.K_s:
                y += 4;
            if e.key == pygame.K_d:
                x += 4;
    screen.fill(0);
    draw(0,170,170,0,0,16,20);
    draw(46,46,46,16,0,16,20);
    font = pygame.font.Font("ttyfont.ttf", 16);
    screen.blit(font.render("1", True, (255,255,255)), (4,2));
    screen.blit(font.render("2", True, (255,255,255)), (20,2));
    draw(0,170,170,0,21,340,16);
    screen.blit(font.render("Terminal", True, (255,255,255)), (4,21));
    draw(0,170,170,0,32,2,158);
    draw(0,170,170,0,188,340,2);
    draw(0,170,170,338,32,2,158);
    screen.blit(font.render("[gnulinux@arch ~]$ lux3-info", True, (170,170,170)), (2,38));
    screen.blit(font.render("Lux3 - The Analog Window Manager 'i3', ", True, (170,170,170)), (4,54));
    screen.blit(font.render("made by Luxidev", True, (170,170,170)), (4,70));
    screen.blit(font.render("Language: Python", True, (170,170,170)), (4,86));
    screen.blit(font.render("Version: 1.0", True, (170,170,170)), (4,102));
    screen.blit(font.render("Release date: 2025-08-20", True, (170,170,170)), (4,118));
    screen.blit(font.render("[gnulinux@arch ~]$ ", True, (170,170,170)), (4,134));
    screen.blit(font.render(time.ctime(), True, (255,255,255)), (140,2));
    draw(255,255,255,x,y,8,8);
    pygame.display.flip();
